              {% assign skip_card_product_styles = false %}
              {% assign featured_collection = collections['featured'] %}
            
              {%- comment -%}
              Determine featured_limit (dynamic) and per_page
              {%- endcomment -%}
              {% assign requested_featured_limit = section.settings.featured_count | default: 0 | plus: 0 %}
              {% assign available_featured = featured_collection.products.size | default: 0 | plus: 0 %}
            
              {% if requested_featured_limit > 0 %}
                {% assign featured_limit = requested_featured_limit %}
                {% if featured_limit > available_featured %}
                  {% assign featured_limit = available_featured %}
                {% endif %}
              {% else %}
                {% assign featured_limit = available_featured %}
              {% endif %}
            
              {% assign per_page = section.settings.products_per_page | plus: 0 %}
              {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}
            
              {%- comment -%}
              If we will inject featured on page 1 & manual sort, compute how many normal items we should render:
                normal_render_limit = per_page - featured_limit (min 0)
              {%- endcomment -%}
              {% assign normal_render_limit = per_page %}
              {% if paginate.current_page == 1 and sort_by == 'manual' and featured_limit > 0 %}
                {% assign normal_render_limit = per_page | minus: featured_limit %}
                {% if normal_render_limit < 0 %}{% assign normal_render_limit = 0 %}{% endif %}
              {% endif %}
                  {{ normal_render_limit | json }}
            
              {%- comment -%}
              Build featured_ids for skipping and render featured (only on page 1 & manual sort)
              {%- endcomment -%}
              {% assign featured_ids = '' %}

              {% if featured_limit > 0 and paginate.current_page == 1 and sort_by == 'manual' %}

                {% for f in featured_collection.products limit: per_page %}
                  {% assign featured_ids = featured_ids | append: f.id | append: ',' %}
                  {% assign lazy_load = false %}
                  <li
                    class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {% render 'card-product',
                      card_product: f,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      lazy_load: lazy_load,
                      skip_styles: skip_card_product_styles,
                      quick_add: section.settings.quick_add,
                      section_id: section.id
                    %}
                  </li>
                  {% assign skip_card_product_styles = true %}
                {% endfor %}
              {% endif %}
            
              {%- comment -%}
              Now render normal paginated products.
              - If on page 1 & manual sort: render only first `normal_render_limit` non-featured items (so total = per_page).
              - Else: render all collection.products (Shopify already paginated them to per_page).
              {%- endcomment -%}
              {% if paginate.current_page == 1 and sort_by == 'manual' and featured_limit > 0 %}
                {% assign normal_count = 0 %}
                {%- for product in collection.products -%}
                  {% unless featured_ids contains product.id %}
                    {% assign lazy_load = false %}
                    {%- if forloop.index > 2 -%}{% assign lazy_load = true %}{% endif -%}
                  
                    <li
                      class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                      {% if settings.animations_reveal_on_scroll %}
                        data-cascade
                        style="--animation-order: {{ forloop.index | plus: featured_limit }};"
                      {% endif %}
                    >
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        lazy_load: lazy_load,
                        skip_styles: skip_card_product_styles,
                        quick_add: section.settings.quick_add,
                        section_id: section.id
                      %}
                    </li>
                    {% assign skip_card_product_styles = true %}
                    {% assign normal_count = normal_count | plus: 1 %}
                    {% if normal_count >= normal_render_limit %}
                      {% break %}
                    {% endif %}
                  {% endunless %}
                {%- endfor -%}
              {% else %}
                {%- for product in collection.products -%}
                  {% assign lazy_load = false %}
                  {%- if forloop.index > 2 -%}{% assign lazy_load = true %}{% endif -%}
                
                  <li
                    class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {% render 'card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.image_ratio,
                      image_shape: section.settings.image_shape,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      lazy_load: lazy_load,
                      skip_styles: skip_card_product_styles,
                      quick_add: section.settings.quick_add,
                      section_id: section.id
                    %}
                  </li>
                  {% assign skip_card_product_styles = true %}
                {%- endfor -%}
              {% endif %}
            </ul>

 
 
 
            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate, anchor: '' %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}



  {%- comment -%} Shopify Collection Grid: Featured Products First with Pagination {%- endcomment -%}

{%- assign per_page = section.settings.products_per_page | plus: 0 -%}
{%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}

{%- comment -%} Split products into featured and normal {%- endcomment -%}
{%- assign featured_products = '' | split: '' -%}
{%- assign normal_products = '' | split: '' -%}
{%- for product in collection.products -%}
  {%- if product.tags contains 'featured' -%}
    {%- assign featured_products = featured_products | push: product -%}
  {%- else -%}
    {%- assign normal_products = normal_products | push: product -%}
  {%- endif -%}
{%- endfor -%}

{%- assign featured_count = featured_products.size | plus: 0 -%}
{%- assign normal_count = normal_products.size | plus: 0 -%}

{%- comment -%} Start pagination block {%- endcomment -%}
{%- paginate collection.products by per_page -%}

  {%- comment -%} Determine featured products to display on current page {%- endcomment -%}
  {% assign featured_start_index = per_page | times: paginate.current_page | minus: per_page %}
  {% assign featured_on_this_page = 0 %}
  {% if featured_start_index < featured_count %}
    {% assign remaining_featured = featured_count | minus: featured_start_index %}
    {% assign featured_on_this_page = remaining_featured %}
    {% if featured_on_this_page > per_page %}{% assign featured_on_this_page = per_page %}{% endif %}
  {% endif %}

  {%- comment -%} Determine normal products to display on current page {%- endcomment -%}
  {% assign normal_start_index = 0 %}
  {% assign normal_on_this_page = 0 %}
  {% assign featured_pages = featured_count | divided_by: per_page | ceil %}
  {% if paginate.current_page > featured_pages %}
    {% assign normal_start_index = per_page | times: paginate.current_page | minus: per_page | minus: featured_count %}
    {% assign normal_on_this_page = per_page %}
  {% elsif paginate.current_page == 1 %}
    {% assign normal_on_this_page = per_page | minus: featured_on_this_page %}
  {% endif %}

  {%- comment -%} Slice arrays for current page {%- endcomment -%}
  {% assign page_featured_products = featured_products | slice: featured_start_index, featured_on_this_page %}
  {% assign page_normal_products = normal_products | slice: normal_start_index, normal_on_this_page %}
  {% assign page_products = page_featured_products | concat: page_normal_products %}

  {%- comment -%} Sort sidebar for vertical filter type {%- endcomment -%}
