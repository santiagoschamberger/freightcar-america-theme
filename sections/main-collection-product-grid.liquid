{%- comment -%}
Expose featured product handles to JS. Put this before the product grid.
Change 'featured' to your collection handle if different.
{%- endcomment -%}
<script type="text/javascript">
  window.featuredHandles = [
    {%- assign fc = collections['featured'] -%}
    {%- if fc -%}
      {%- for p in fc.products -%}
        "{{ p.handle }}"{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    {%- endif -%}
  ];
</script>
<script>
(function () {
  // Wait for #product-grid to exist and contain <li> items, up to timeout
  function waitForGrid(cb, timeoutMs = 5000) {
    var start = Date.now();
    (function poll() {
      var grid = document.querySelector('#product-grid');
      if (grid && grid.querySelectorAll('li').length > 0) return cb(grid);
      if (Date.now() - start > timeoutMs) return cb(grid);
      setTimeout(poll, 80);
    })();
  }

  function extractHandleFromLi(li) {
    // cache
    if (li.dataset._prodHandle) return li.dataset._prodHandle || null;

    var handle = null;

    // 1) data attributes (common in some themes)
    if (li.dataset.productHandle) handle = li.dataset.productHandle;
    if (!handle && li.dataset.handle) handle = li.dataset.handle;
    if (!handle && li.dataset.productId) handle = 'id:' + li.dataset.productId;

    // 2) anchor link like /products/<handle>
    if (!handle) {
      var a = li.querySelector('a[href*="/products/"]');
      if (a) {
        var href = a.getAttribute('href');
        var m = href.match(/\/products\/([^\/\?\#]+)/);
        if (m && m[1]) handle = m[1];
      }
    }

    // 3) variant id inside add-to-cart form (fallback)
    if (!handle) {
      var form = li.querySelector('form[action*="/cart/add"]');
      if (form) {
        var idInput = form.querySelector('input[name="id"]');
        if (idInput && idInput.value) handle = 'variant:' + idInput.value;
      }
    }

    // 4) fallback: try to read from elements that sometimes include handle
    if (!handle) {
      var productLink = li.querySelector('[data-product-handle], [data-product-id]');
      if (productLink) {
        handle = productLink.getAttribute('data-product-handle') || productLink.getAttribute('data-product-id');
      }
    }

    // store (string or null)
    li.dataset._prodHandle = handle || '';
    return handle || null;
  }

  function getPageNumber() {
    var params = new URLSearchParams(window.location.search);
    var p = params.get('page');
    return p ? (parseInt(p, 10) || 1) : 1;
  }

  waitForGrid(function (grid) {
    if (!grid) return; // nothing to do

    // Collect list of <li>
    var lis = Array.from(grid.querySelectorAll('li'));
    if (!lis.length) return;

    // Build map handle -> [li,...]
    var map = new Map();
    lis.forEach(function (li) {
      var key = extractHandleFromLi(li) || ('html:' + li.innerHTML.slice(0, 80));
      if (!map.has(key)) map.set(key, []);
      map.get(key).push(li);
    });

    // get featured handles from Liquid snippet if present
    var featuredHandles = Array.isArray(window.featuredHandles) ? window.featuredHandles.slice() : [];
    // normalize (strings)
    featuredHandles = featuredHandles.filter(Boolean).map(String);

    // fallback: if there are user-marked featured nodes, capture handles
    if (featuredHandles.length === 0) {
      // e.g. if your theme rendered data-featured="true" on li
      var marked = lis.filter(function (li) {
        return li.querySelector('[data-featured="true"]') || li.dataset.featured === 'true' || li.classList.contains('featured') || li.className.indexOf('badge--featured') !== -1;
      });
      if (marked.length) {
        featuredHandles = marked.map(extractHandleFromLi).filter(Boolean);
      }
    }

    var page = getPageNumber();

    // If we have explicit featuredHandles:
    if (featuredHandles.length > 0) {
      if (page > 1) {
        // On page > 1: remove any li whose handle is featured
        lis.forEach(function (li) {
          var h = extractHandleFromLi(li);
          if (h && featuredHandles.indexOf(h) !== -1) {
            li.remove();
          }
        });
        return;
      }

      // Page == 1: ensure featured order & remove duplicates
      // For each handle in the featured array, move its first occurrence to the top in order, and remove other occurrences
      var insertionPoint = grid.firstElementChild;
      featuredHandles.forEach(function (fh) {
        // find nodes matching this handle in current grid
        var nodes = Array.from(grid.querySelectorAll('li')).filter(function (li) {
          return extractHandleFromLi(li) === fh;
        });
        if (nodes.length === 0) return;
        var first = nodes[0];
        // move first to insertionPoint
        grid.insertBefore(first, insertionPoint);
        insertionPoint = first.nextSibling;
        // remove duplicates of this handle after the first
        for (var i = 1; i < nodes.length; i++) nodes[i].remove();
      });

      // After handling featured order, dedupe any other duplicates (keep first)
      var seen = new Set();
      Array.from(grid.querySelectorAll('li')).forEach(function (li) {
        var h = extractHandleFromLi(li) || ('html:' + li.innerHTML.slice(0, 80));
        if (seen.has(h)) {
          li.remove();
        } else {
          seen.add(h);
        }
      });

      return;
    }

    // No featuredHandles known: fallback dedupe by handle (keep first occurrence)
    var seenFallback = new Set();
    Array.from(grid.querySelectorAll('li')).forEach(function (li) {
      var h = extractHandleFromLi(li) || ('html:' + li.innerHTML.slice(0, 80));
      if (seenFallback.has(h)) {
        li.remove();
      } else {
        seenFallback.add(h);
      }
    });
  });
})();
</script>
