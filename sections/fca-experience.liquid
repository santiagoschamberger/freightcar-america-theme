{%- style -%}
  .fca-experience {
    background: white;
    padding: 60px 0;
    position: relative;
    overflow: hidden;
    border-top: 4px solid #5784CC;
  }

  .fca-experience__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 30% 70%;
    gap: 60px;
    align-items: flex-start;
  }

  .fca-experience__title-column {
    padding-right: 20px;
    display: flex;
    align-items: center;
  }

  .fca-experience__content-column {
    padding-left: 20px;
  }

  .fca-experience__title {
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 32px;
    line-height: 1.375;
    color: #00205B;
    margin: 0;
  }

  .fca-experience__description {
    font-family: 'Gotham', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.57;
    color: #00205B;
    margin-bottom: 40px;
  }

  .fca-experience__button {
    display: inline-block;
    background: #D31244;
    color: white;
    padding: 20px 24px 17px;
    text-decoration: none;
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 1;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    box-shadow: 0px -4px 4px 0px rgba(18, 47, 91, 0.15);
  }

  .fca-experience__button:hover {
    background: #BF0D3D;
    color: white;
  }

  @media (max-width: 768px) {
    .fca-experience {
      padding: 40px 0;
    }

    .fca-experience__container {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: left;
    }

    .fca-experience__title-column {
      padding-right: 0;
    }

    .fca-experience__content-column {
      padding-left: 0;
    }

    .fca-experience__title {
      font-size: 28px;
      margin-bottom: 20px;
    }

    .fca-experience__description {
      margin-bottom: 30px;
    }

    .fca-experience__button {
      font-size: 18px;
    }
  }
{%- endstyle -%}

<section class="fca-experience">
  <div class="fca-experience__container">
    <div class="fca-experience__title-column">
      {%- if section.settings.title != blank -%}
        <h2 class="fca-experience__title">{{ section.settings.title }}</h2>
      {%- endif -%}
    </div>

    <div class="fca-experience__content-column">
      {%- if section.settings.description != blank -%}
        <p class="fca-experience__description">{{ section.settings.description }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="fca-experience__button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FCA Experience",
  "tag": "section",
  "class": "section-fca-experience",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Experience, Your Advantage"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "With over 100 years of railcar leadership, FreightCar America combines deep industry expertise with innovative thinking to deliver the parts that keep your team performing at their best. Our extensive network ensures fast and reliable delivery of parts, no matter where or when you need them"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Order Today"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "FCA Experience"
    }
  ]
}
{% endschema %} 