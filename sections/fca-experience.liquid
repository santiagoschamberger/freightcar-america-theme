{%- style -%}
  .fca-experience {
    background: white;
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }

  .fca-experience::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #5784CC 0%, #D31244 100%);
    z-index: 2;
  }

  .fca-experience__decorative-lines {
    position: absolute;
    top: 8px;
    left: 0;
    right: 0;
    height: 4px;
    z-index: 1;
  }

  .fca-experience__line {
    position: absolute;
    height: 4px;
  }

  .fca-experience__line--blue {
    background: #5784CC;
    left: -36px;
    right: 0;
  }

  .fca-experience__line--red {
    background: #D31244;
    left: -106px;
    right: 0;
  }

  .fca-experience__line--white {
    background: white;
    left: -71px;
    right: 0;
  }

  .fca-experience__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .fca-experience__content {
    padding-left: 116px;
  }

  .fca-experience__title {
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 32px;
    line-height: 1.375;
    color: #00205B;
    margin-bottom: 30px;
    max-width: 366px;
  }

  .fca-experience__description {
    font-family: 'Gotham', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.57;
    color: #00205B;
    margin-bottom: 40px;
    max-width: 754px;
  }

  .fca-experience__button {
    display: inline-block;
    background: #D31244;
    color: white;
    padding: 20px 24px 17px;
    text-decoration: none;
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 1;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    box-shadow: 0px -4px 4px 0px rgba(18, 47, 91, 0.15);
  }

  .fca-experience__button:hover {
    background: #BF0D3D;
    color: white;
  }

  .fca-experience__progress {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 60px;
  }

  .fca-experience__progress-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: #D9D9D9;
  }

  .fca-experience__progress-dot.active {
    background: #D31244;
  }

  @media (max-width: 768px) {
    .fca-experience__container {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .fca-experience__content {
      padding-left: 20px;
    }

    .fca-experience__title {
      font-size: 28px;
      max-width: none;
    }

    .fca-experience__description {
      max-width: none;
    }

    .fca-experience__button {
      font-size: 18px;
      display: block;
      max-width: 300px;
      margin: 0 auto;
      text-align: center;
    }

    .fca-experience__progress {
      justify-content: center;
    }
  }
{%- endstyle -%}

<section class="fca-experience">
  <div class="fca-experience__decorative-lines">
    <div class="fca-experience__line fca-experience__line--blue"></div>
    <div class="fca-experience__line fca-experience__line--red"></div>
    <div class="fca-experience__line fca-experience__line--white"></div>
  </div>

  <div class="fca-experience__container">
    <div class="fca-experience__content">
      {%- if section.settings.title != blank -%}
        <h2 class="fca-experience__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="fca-experience__description">{{ section.settings.description }}</p>
      {%- endif -%}
      
      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="fca-experience__button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    <div class="fca-experience__progress">
      <div class="fca-experience__progress-dot active"></div>
      <div class="fca-experience__progress-dot"></div>
      <div class="fca-experience__progress-dot"></div>
      <div class="fca-experience__progress-dot"></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FCA Experience",
  "tag": "section",
  "class": "section-fca-experience",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Our Experience, Your Advantage"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "With over 100 years of railcar leadership, FreightCar America combines deep industry expertise with innovative thinking to deliver the parts that keep your team performing at their best. Our extensive network ensures fast and reliable delivery of parts, no matter where or when you need them"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Order Today"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/start-order"
    }
  ],
  "presets": [
    {
      "name": "FCA Experience"
    }
  ]
}
{% endschema %} 