{%- style -%}
  @font-face {
    font-family: 'Outage';
    src: url('{{ 'Outage.ttf' | asset_url }}') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Gotham';
    src: url('{{ 'Gotham-Book.otf' | asset_url }}') format('opentype');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Gotham';
    src: url('{{ 'Gotham-Medium.otf' | asset_url }}') format('opentype');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: 'Gotham';
    src: url('{{ 'Gotham-Bold.otf' | asset_url }}') format('opentype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  .fca-exchange-process {
    background-color: #326295;
    position: relative;
    width: 100%;
    padding: 146px 341px;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fca-exchange-process__container {
    width: 100%;
    max-width: 696px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    text-align: center;
  }

  .fca-exchange-process__title {
    font-family: 'Outage', sans-serif;
    font-weight: normal;
    font-size: 42px;
    line-height: normal;
    color: #ffffff;
    margin: 0;
    width: 100%;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fca-exchange-process__description {
    font-family: 'Gotham', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 26px;
    color: #ffffff;
    margin: 0;
    width: 100%;
    height: 88px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .fca-exchange-process__description a {
    color: #ffffff;
    text-decoration: underline;
    font-weight: 700;
  }

  .fca-exchange-process__description .phone-number {
    font-weight: 700;
  }

  .fca-exchange-process__form-container {
    margin-top: 40px;
    width: 100%;
    max-width: 800px;
  }

  /* Responsive Design */
  @media screen and (max-width: 1200px) {
    .fca-exchange-process {
      padding: 100px 100px;
    }
  }

  @media screen and (max-width: 768px) {
    .fca-exchange-process {
      padding: 50px 40px;
      height: auto;
    }
    
    .fca-exchange-process__container {
      max-width: 100%;
    }
    
    .fca-exchange-process__title {
      font-size: 32px;
      height: auto;
    }
    
    .fca-exchange-process__description {
      font-size: 16px;
      line-height: 24px;
      height: auto;
    }
  }

  @media screen and (max-width: 480px) {
    .fca-exchange-process {
      padding: 40px 20px;
    }
    
    .fca-exchange-process__title {
      font-size: 28px;
    }
    
    .fca-exchange-process__description {
      font-size: 14px;
      line-height: 22px;
    }
  }
{%- endstyle -%}

<section class="fca-exchange-process">
  <div class="fca-exchange-process__container">
    <h2 class="fca-exchange-process__title">
      {{ section.settings.title | default: "Start the Exchange Process" }}
    </h2>
    
    <div class="fca-exchange-process__description">
      <p>
        Call us at <span class="phone-number">{{ section.settings.phone_number | default: "(814) 533-4109" }}</span> or email 
        <a href="mailto:{{ section.settings.email | default: 'parts@freightcar.net' }}">{{ section.settings.email | default: "parts@freightcar.net" }}</a>
        to get started or fill out the form below and a member of our team will be in touch shortly.
      </p>
    </div>

    {% if section.settings.show_form %}
      <div class="fca-exchange-process__form-container">
        {% comment %}
          This is where you can add your Shopify form.
          You can either:
          1. Use the Shopify Forms app and enter the form ID
          2. Use the default contact form fallback
        {% endcomment %}
        
        {% if section.settings.form_id != blank %}
          {% form 'form', id: section.settings.form_id %}
            {{ form }}
          {% endform %}
        {% else %}
          {% comment %} Default contact form fallback {% endcomment %}
          {% form 'contact' %}
            <div style="display: flex; flex-direction: column; gap: 20px; max-width: 600px; margin: 0 auto;">
              <div style="display: flex; gap: 20px;">
                <input type="text" name="contact[first_name]" placeholder="First Name" required style="flex: 1; padding: 12px; border: 1px solid #ccc; border-radius: 4px;">
                <input type="text" name="contact[last_name]" placeholder="Last Name" required style="flex: 1; padding: 12px; border: 1px solid #ccc; border-radius: 4px;">
              </div>
              <input type="email" name="contact[email]" placeholder="Email Address" required style="padding: 12px; border: 1px solid #ccc; border-radius: 4px;">
              <input type="tel" name="contact[phone]" placeholder="Phone Number" style="padding: 12px; border: 1px solid #ccc; border-radius: 4px;">
              <textarea name="contact[body]" placeholder="How can we help you with your exchange?" required style="padding: 12px; border: 1px solid #ccc; border-radius: 4px; min-height: 120px; resize: vertical;"></textarea>
              <button type="submit" style="background-color: #D31244; color: white; padding: 15px 30px; border: none; border-radius: 4px; font-weight: 700; cursor: pointer; font-size: 16px;">Submit Request</button>
            </div>
          {% endform %}
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "FCA Exchange Process",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Start the Exchange Process"
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "(814) 533-4109"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address",
      "default": "parts@freightcar.net"
    },
    {
      "type": "checkbox",
      "id": "show_form",
      "label": "Show Form",
      "default": true
    },
    {
      "type": "text",
      "id": "form_id",
      "label": "Shopify Form ID",
      "info": "Enter your Shopify Forms app form ID here, or leave blank to use the default contact form"
    }
  ],
  "presets": [
    {
      "name": "FCA Exchange Process"
    }
  ]
}
{% endschema %} 