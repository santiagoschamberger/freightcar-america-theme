{%- style -%}
  .fca-running-repair {
    background: #00205B;
    padding: 100px 0;
    color: white;
  }

  .fca-running-repair__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .fca-running-repair__content {
    padding-left: 113px;
  }

  .fca-running-repair__title {
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 42px;
    line-height: 1.43;
    margin-bottom: 40px;
    color: white;
  }

  .fca-running-repair__description {
    font-family: 'Gotham', sans-serif;
    font-weight: 500;
    font-size: 18px;
    line-height: 1.44;
    margin-bottom: 40px;
    max-width: 552px;
  }

  .fca-running-repair__features {
    list-style: none;
    padding: 0;
    margin-bottom: 40px;
  }

  .fca-running-repair__feature {
    display: flex;
    align-items: flex-start;
    gap: 30px;
    margin-bottom: 40px;
  }

  .fca-running-repair__feature-icon {
    width: 20px;
    height: 16px;
    background: linear-gradient(45deg, #5784CC, #D31244);
    border-radius: 2px;
    flex-shrink: 0;
    margin-top: 2px;
    filter: drop-shadow(0px 0px 6px rgba(255, 255, 255, 0.35));
  }

  .fca-running-repair__feature-content h3 {
    font-family: 'Gotham', sans-serif;
    font-weight: 700;
    font-size: 18px;
    line-height: 1.44;
    color: #5784CC;
    margin: 0 0 4px 0;
  }

  .fca-running-repair__feature-content p {
    font-family: 'Gotham', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 1.5;
    margin: 0;
  }

  .fca-running-repair__button {
    display: inline-block;
    background: #D31244;
    color: white;
    padding: 20px 24px 17px;
    text-decoration: none;
    font-family: 'Outage', sans-serif;
    font-weight: 700;
    font-size: 20px;
    line-height: 1;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .fca-running-repair__button:hover {
    background: #BF0D3D;
    color: white;
  }

  .fca-running-repair__image {
    width: 100%;
    height: 746px;
    object-fit: cover;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .fca-running-repair__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .fca-running-repair__content {
      padding-left: 20px;
      order: 2;
    }

    .fca-running-repair__title {
      font-size: 32px;
      text-align: center;
    }

    .fca-running-repair__image {
      height: 400px;
      order: 1;
    }

    .fca-running-repair__button {
      font-size: 16px;
      display: block;
      text-align: center;
      max-width: 300px;
      margin: 0 auto;
    }
  }
{%- endstyle -%}

<section class="fca-running-repair">
  <div class="fca-running-repair__container">
    <div class="fca-running-repair__content">
      {%- if section.settings.title != blank -%}
        <h2 class="fca-running-repair__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="fca-running-repair__description">{{ section.settings.description }}</p>
      {%- endif -%}

      <ul class="fca-running-repair__features">
        <li class="fca-running-repair__feature">
          <div class="fca-running-repair__feature-icon"></div>
          <div class="fca-running-repair__feature-content">
            <h3>Fast Delivery</h3>
            <p>Parts ready to ship in two days for quick, reliable service.</p>
          </div>
        </li>
        <li class="fca-running-repair__feature">
          <div class="fca-running-repair__feature-icon"></div>
          <div class="fca-running-repair__feature-content">
            <h3>Certified Quality</h3>
            <p>All parts meet M1003 standards for precision and durability.</p>
          </div>
        </li>
        <li class="fca-running-repair__feature">
          <div class="fca-running-repair__feature-icon"></div>
          <div class="fca-running-repair__feature-content">
            <h3>Highly Competitive Pricing</h3>
            <p>Providing value without compromising on quality.</p>
          </div>
        </li>
      </ul>
      
      {%- if section.settings.button_text != blank and section.settings.button_url != blank -%}
        <a href="{{ section.settings.button_url }}" class="fca-running-repair__button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>

    {%- if section.settings.image != blank -%}
      <div class="fca-running-repair__image-container">
        <img src="{{ section.settings.image | image_url }}" 
             alt="{{ section.settings.title }}" 
             class="fca-running-repair__image">
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "FCA Running Repair Parts",
  "tag": "section",
  "class": "section-fca-running-repair",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Running Repair Parts You Can Rely On"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Minimize downtime with our ready-to-ship, high-quality running repair parts."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "view our parts catalog"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "FCA Running Repair Parts"
    }
  ]
}
{% endschema %} 